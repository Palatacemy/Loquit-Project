@model Loquit.Web.Models.PostCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="form-container-content" >
<div class="form-title">Create Post</div>
<hr />
    <div class="row">

        <form asp-action="Create" enctype="multipart/form-data">
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                 <label asp-for="Title" class="control-label"></label>
                 <input asp-for="Title" class="form-control" maxlength="200"/>
                 <span asp-validation-for="Title" class="text-danger"></span>
             </div>
             <div class="form-group">
                 <label asp-for="BodyText" class="control-label">Text</label>
                <textarea oninput="auto_grow(this)" TextMode="MultiLine" asp-for="BodyText" class="form-control" maxlength="5000"></textarea>
                 <span asp-validation-for="BodyText" class="text-danger"></span>
             </div>
            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" type="file" accept="image/*" class="form-control-file" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category">Select Category:</label>
                <select asp-for="Category">
                    <option selected>None</option>
                    <option value="Food">Food</option>
                    <option value="Music/Art">Music/Art</option>
                    <option value="Nature">Nature</option>
                    <option value="Pets">Pets</option>
                    <option value="Videogames">Videogames</option>
                    <option value="Culture">Culture</option>
                    <option value="Funny">Funny</option>
                    <option value="Factology">Factology</option>
                </select>
            </div>
             <div class="form-group form-check">
                 <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSpoiler" /> Spoiler
                 </label>
             </div>
             <div class="form-group form-check">
                 <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsNsfw" /> NSFW
                 </label>
             </div>
             <input type="hidden" asp-for="CreatorId" />
             <div class="form-group form-button">
                     <input type="submit" value="Create" class="highlighted-button create-post-btn btn btn-primary" />
             </div>
         </form>
         
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
