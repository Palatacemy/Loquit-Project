@using Loquit.Web.Models;
@using Loquit.Services.DTOs
@using Loquit.Services.DTOs.ChatTypesDTOs;

@model CurrentChatViewModel;

<div class="lr-container-content d-flex justify-content-start align-items-center" style="height: 90%">
    @if (Model != null) {
        <div class="messages" id="chatMessages">
            <partial name="_DirectChatMessagesPartial" model="Model" />
        </div>
        <div style="height: 20%">
            <partial name="_TextMessageFormPartial" model="new SendMessageViewModel() { ChatId = Model.CurrentChat.Id }" />
            <partial name="_ImageMessageFormPartial" model="new SendMessageViewModel() { ChatId = Model.CurrentChat.Id }" />
        </div>
    }
    else {
        <h1 class="d-flex justify-content-start align-items-center">No one to chat with</h1>
    }
</div>