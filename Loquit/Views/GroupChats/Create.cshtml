@model Loquit.Data.Entities.ChatTypes.GroupChat

@{
    ViewData["Title"] = "Create";
}

<div class="form-container-content">
<div class="form-title">Create Group</div>
<hr />
    <div class="row">
       
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PictureUrl" class="control-label"></label>
                    <input asp-for="PictureUrl" class="form-control" />
                    <span asp-validation-for="PictureUrl" class="text-danger"></span>
                </div>
                <div class="form-group form-button">
                    <input type="submit" value="Create" class="highlighted-button create-post-btn btn btn-primary" />
                </div>
            </form>
        
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
