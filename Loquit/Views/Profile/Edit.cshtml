@model Loquit.Web.Models.UserEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="form-container-content">
    <div class="form-title">Edit User</div>
    <hr />
    <div class="row">
        <form asp-action="EditUser" asp-controller="Profile" asp-route-username="@Model.UserName" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" maxlength="40" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" maxlength="40" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Text</label>
                <textarea oninput="auto_grow(this)" TextMode="MultiLine" asp-for="Description" class="form-control" maxlength="5000"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="date" class="form-control" maxlength="200" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ProfilePictureUrl" />
                <label asp-for="Picture" class="control-label"></label>
                <input asp-for="Picture" type="file" class="form-control-file" />
                <span asp-validation-for="Picture" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="ColorThemeId" class="control-label"></label>
                <select asp-for="ColorThemeId" class="form-control">
                    <option value="1">Light Theme</option>
                    <option value="2">Crimson Theme</option>
                    <option value="3">Dark Theme</option>
                </select>
            </div> 
            <div class="form-group form-button">
                <input type="submit" value="Edit" class="highlighted-button create-post-btn btn" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
